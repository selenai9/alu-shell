#!/bin/bash
# Define source and destination directories
src_dir=$(pwd)
dest_dir=$(dirname "$src_dir")

# Check if any .html files exist in the source directory
shopt -s nullglob
html_files=("$src_dir"/*.html)

if [ ${#html_files[@]} -eq 0 ]; then
  echo "No .html files found in the current directory."
  exit 1
fi

# Loop through each .html file in the source directory
for file in "${html_files[@]}"
do
  # Check if the file exists in the destination directory
  if [ ! -f "$dest_dir/$(basename "$file")" ] || [ "$file" -nt "$dest_dir/$(basename "$file")" ]
  then
    # Copy the file if it does not exist or is newer
    cp "$file" "$dest_dir"
    echo "Copied: $(basename "$file")"
  else
    echo "File $(basename "$file") is not newer. Skipping."
  fi
done

